<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.challenge.ChallengeStudyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/txt_question_number_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_blue_bg"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Soal ke-24"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/img_true_or_false"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="56dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/img_question_study"
            android:layout_marginTop="16dp"
            android:layout_below="@id/txt_question_number_study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_question_study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_question_study"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">
        </TextView>

        <RadioGroup
            android:id="@+id/radioGroup_study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_question_study"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp">

            <RadioButton
                android:id="@+id/rd_a_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="A" />

            <RadioButton
                android:id="@+id/rd_b_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="B" />

            <RadioButton
                android:id="@+id/rd_c_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="C" />

            <RadioButton
                android:id="@+id/rd_d_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="D" />

        </RadioGroup>

        <TextView
            android:id="@+id/txt_study_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroup_study"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_blue_bg"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp"
            android:text="Pembahasan soal"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/txt_study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_study_header"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_12sdp"/>


        <LinearLayout
            android:id="@+id/layout_btn_navigator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_below="@id/txt_study">

            <Button
                android:id="@+id/btn_prev_study"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/rounded_btn_next_or_prev"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Sebelumnya"/>

            <Button
                android:id="@+id/btn_next_study"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_btn_next_or_prev"
                android:textColor="@android:color/white"
                android:text="Selanjutnya"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_go_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_btn_navigator"
            android:layout_marginStart="24dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_btn_next_or_prev"
            android:text="Halaman Utama"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </RelativeLayout>


</ScrollView>